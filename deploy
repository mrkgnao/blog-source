#!/bin/bash

DIST_DIR=/tmp/blog-deploy
mkdir $DIST_DIR

stack --verbose exec build-site -- -o $DIST_DIR

cd $DIST_DIR

git init

git remote add origin https://github.com/mrkgnao/mrkgnao.github.io.git
git add .
git commit -m "Autogenerated at $(date)"

git push -u origin master --force

rm -fr $DIST_DIR
